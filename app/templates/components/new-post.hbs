{{#if addNewPost}}
<h1>New Post!</h1>
<div>
  <form {{action 'savePost' on='submit'}}>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" required="required"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" required="required"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" required="required"}}
    </div>

    <div class="form-group">
      <label for="body">Your New Post</label>
      {{input value=body id="body" required="required"}}
    </div>

    <button>Save</button>
  </form>
</div>
{{else}}
  <button {{action 'postFormShow'}}>New Post</button>
{{/if}}
